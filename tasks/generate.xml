<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="connector.codegen.typescript">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2021-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="connector.codegen.typescript.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/connector.codegen.typescript/bin"/>
    </path>

    <path id="connector.codegen.typescript.classpath">
        <path refid="connector.codegen.typescript.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="connector.codegen.typescript.libraryclasspath.alljars">
        <pathelement location="../connector.codegen.typescript/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="connector.codegen.typescript.classpath.alljars">
        <path refid="connector.codegen.typescript.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="org.datafoodconsortium.connector.codegen.typescript.Generate" classpathref="connector.codegen.typescript.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="org.datafoodconsortium.connector.codegen.typescript.Generate" classpathref="connector.codegen.typescript.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
